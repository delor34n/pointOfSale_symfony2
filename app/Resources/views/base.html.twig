<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href=" {{ asset ( "favicon.ico" ) }} "/>
        <title>{% block title %}| Bodega Los Mena - Control de Stock {% endblock %}</title>
        {% stylesheets 'bundles/jmenaventas/css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% javascripts '@JmenaVentasBundle/Resources/public/js/*' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="titulo" class="brand" href=" {{ path ( '_home' ) }} ">Bodega Los Mena</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="{% block active_venta %} {% endblock %}"><a id="venta" href=" {{ path ( '_home' ) }} "><i class="icon-tags icon-white"></i> VENTA</a></li>
                            <li class="{% block active_stock %} {% endblock %}"><a id="stock" href=" {{ path ( '_stock' ) }} "><i class="icon-hdd icon-white"></i> STOCK</a></li>
                            <li class="{% block active_vendedor %} {% endblock %}"><a id="vendedor" href=" {{ path ( '_vendedor' ) }} "><i class="icon-hdd icon-white"></i> VENDEDOR</a></li>
                            <li class="dropdown {% block active_inventario %} {% endblock %}">
                                <a id="inventario" href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-bookmark icon-white"></i> INVENTARIO<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href=" {{ path ( '_producto' ) }} ">PRODUCTOS</a></li>
                                    <li><a href=" {{ path ( '_categoria' ) }} ">CATEGORIAS</a></li>
                                    <li><a href=" {{ path ( '_marca' ) }} ">MARCAS</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div><!--/.container -->
            </div><!--/.navbar-inner -->
        </div><!--/.navbar navbar-inverse navbar-fixed-top -->
        <div class="container">
                {% block body %}{% endblock %}
        </div>
    </body>
</html>