{% extends '::base.html.twig' %}

{% block title%}
    Detalle Producto
    {{ parent() }}
{% endblock%}

{% block body -%}
    <h2>Detalle Producto</h2>
    <a class="new btn btn-primary btn-large" href="{{ path('producto_edit', { 'id': entity.id }) }}">
            <i class="icon-edit"></i> EDITAR
    </a>
    <form class="new del" action="{{ path('producto_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger btn-large" type="submit"><i class="icon-remove"></i> ELIMINAR</button>
    </form>
    </br>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Código</th>
                <td>{{ entity.codigo }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ entity.stock }}</td>
            </tr>
            <tr>
                <th>Alarma</th>
                <td>{{ entity.alarma }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ entity.valor }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('producto') }}">
        <i class="icon-chevron-left"></i>VOLVER
    </a>
{% endblock %}