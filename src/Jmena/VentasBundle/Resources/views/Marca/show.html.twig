{% extends '::base.html.twig' %}

{% block title%}
    Detalle Marca
    {{ parent() }}
{% endblock%}

{% block body -%}
    <h2>Marca</h2>
    <a class="new btn btn-primary btn-large" href="{{ path('marca_edit', { 'id': entity.id }) }}">
            <i class="icon-edit"></i> EDITAR
    </a>
    <form class="new del" action="{{ path('marca_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_rest(delete_form) }}
        <button class="btn btn-danger btn-large" type="submit"><i class="icon-remove"></i> ELIMINAR</button>
    </form>
    </br>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('marca') }}">
        <i class="icon-chevron-left"></i>VOLVER
    </a>
{% endblock %}
