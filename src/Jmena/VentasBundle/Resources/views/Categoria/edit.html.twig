{% extends '::base.html.twig' %}

{% block title%}
    Editar Categoria
    {{ parent() }}
{% endblock%}

{% block body -%}
    <h2>Editar Categoria</h2>
    </br>
    <form action="{{ path('categoria_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            </br>
            <button class="btn btn-primary btn-large" type="submit">GUARDAR</button>
        </p>
    </form>
    <a href="{{ path('categoria') }}">
        <i class="icon-chevron-left"></i>VOLVER
    </a>
{% endblock %}